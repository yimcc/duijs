<?xml version="1.0" encoding="utf-8"?>

<Window>
  <Font name="微软雅黑" id="0" size="13" default="true"/>
  
  <Style css="css/common.css">
	#exeBtn{
		width:32;
		height:32;
		tooltip:执行;
		normalimage:file='msgbox/play.png' source='0,0,32,32';
		hotimage:file='msgbox/play.png' source='32,0,64,32';
		click:clickExec;
	}

	#editInput{
		height:40;
		tipvalue:输入js代码;
		textcolor:#cccccc;
		bkcolor:#ff252526;
		nativebkcolor:#ff252526;
		return:execJs;
	}
  </Style>
  
  <VerticalLayout bkcolor="#ff3c3c3c">
    <HorizontalLayout height="30" >
      <HorizontalLayout inset="8,0,0,0">
          <Label text="DuiJs调试窗口" valign="vcenter" align="left" textcolor="#FFEEEEEE" font="0"/>
      </HorizontalLayout>

      <Button name="minbtn"/>
      <Button name="maxbtn"/>
      <Button name="restorebtn"/>
      <Button name="closebtn"/>
    </HorizontalLayout>
    
    <VerticalLayout bkcolor="#ff1e1e1e">
      <RichEdit name="editOut" font="0" vscrollbar="true" textcolor="#cccccc" padding="5,5,0,5"></RichEdit>
      <HorizontalLayout height="40" bkcolor="#ff252526" childvalign="vcenter">
        <Edit name="editInput" />
        <Button name="exeBtn"/>
        <Control width="6"/>
      </HorizontalLayout>
    </VerticalLayout>
  </VerticalLayout>
</Window>