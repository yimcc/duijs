<?xml version="1.0" encoding="utf-8"?>

<Window caption="0,0,0,30" size="600,384" mininfo="600,384" sizebox="6,6,6,6" layered="false" textrenderinghint="0" showshadow="true" shadowimage="msgbox/shadow.png" shadowsize="6" shadowcorner="8,8,8,8">

  <Style>
	#minbtn{
		width:28;
		height:20;
		tooltip:最小化;
		normalimage:file='msgbox/btn_mini_normal.png';
		hotimage:file='msgbox/btn_mini_highlight.png';
		pushedimage:file='msgbox/btn_mini_down.png'
	}
	#closebtn{
		width:39;
		height:20;
		tooltip:关闭;
		normalimage:file='msgbox/btn_close_normal.png';
		hotimage:file='msgbox/btn_close_highlight.png';
		pushedimage:file='msgbox/btn_close_down.png';
	}
	VScrollBar{
		width:10;
		showbutton1:false;
		showbutton2:false;
		thumbnormalimage:file='msgbox/scrollbar.png' source='18,0,28,34' corner='2,5,2,5';
		bknormalimage:file='msgbox/scrollbar.png' source='0,0,10,34' corner='2,5,2,5'
	}
  </Style>
  
  <Font name="微软雅黑" size="12" default="true"/>

  <VerticalLayout bkcolor="#ff3c3c3c">
    <HorizontalLayout height="30" >
      <HorizontalLayout inset="8,0,0,0">
          <Label text="DuiJs调试窗口" valign="vcenter" align="left" textcolor="#FFEEEEEE" font="0"/>
      </HorizontalLayout>

      <Button name="minbtn" width="27" height="22" normalimage="file='common/sys_btn_min.png' source='0,0,26,22'" hotimage="file='common/sys_btn_min.png' source='27,0,53,22'" pushedimage="file='common/sys_btn_min.png' source='54,0,80,22'"/>
      <Button name="maxbtn" width="27" height="22" normalimage="file='common/sys_btn_max.png' source='0,0,26,22'" hotimage="file='common/sys_btn_max.png' source='27,0,53,22'" pushedimage="file='common/sys_btn_max.png' source='54,0,80,22'"/>
      <Button name="restorebtn"  visible="false" width="27" height="22" normalimage="file='common/sys_btn_restore.png' source='0,0,26,22'" hotimage="file='common/sys_btn_restore.png' source='27,0,53,22'" pushedimage="file='common/sys_btn_restore.png' source='54,0,80,22'"/>
      <Button name="closebtn" width="27" height="22" normalimage="file='common/sys_btn_close.png' source='0,0,26,22'" hotimage="file='common/sys_btn_close.png' source='27,0,53,22'" pushedimage="file='common/sys_btn_close.png' source='54,0,80,22'"/>

    </HorizontalLayout>
    
    <VerticalLayout bkcolor="#ff1e1e1e">
      <RichEdit name="editOut" font="0" vscrollbar="true" textcolor="#cccccc" padding="5,5,0,5"></RichEdit>

      <HorizontalLayout height="40" bkcolor="#ff252526" childvalign="vcenter">
        <Edit name="editInput" height="40" tipvalue="输入js代码" textcolor="#cccccc" bkcolor="#ff252526" nativebkcolor="#ff252526" return="execJs"/>
        <Button width="32" height="32" click="clickExec" tooltip="执行" normalimage="file='msgbox/play.png' source='0,0,32,32'" hotimage="file='msgbox/play.png' source='32,0,64,32'"/>
        <Control width="6"/>
      </HorizontalLayout>
    </VerticalLayout>
  </VerticalLayout>
</Window>